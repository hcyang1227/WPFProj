<Window x:Class="App015_20250701_EF6_SQLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:App015_20250701_EF6_SQLite.ViewModels"
        Title="MainWindow" Height="400" Width="750"
        MinHeight="400" MinWidth="750">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 左側：選擇料捲與顯示defect位置 -->
        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10">
            <ComboBox ItemsSource="{Binding MaterialList}"
                      SelectedItem="{Binding SelectedMaterial}"
                      Height="30" Margin="0,0,0,10">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="index: " />
                            <TextBlock Text="{Binding index}" />
                            <TextBlock Text=", width: " />
                            <TextBlock Text="{Binding roll_width}" />
                            <TextBlock Text="mm, height: " />
                            <TextBlock Text="{Binding roll_height}" />
                            <TextBlock Text="mm" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300" Width="{Binding CanvasWidth}">
                <Canvas Height="{Binding CanvasHeight}" Width="{Binding CanvasWidth}" Background="Black">
                    <ItemsControl ItemsSource="{Binding FilteredDefectList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="Canvas.Left" Value="{Binding CanvasX}"/>
                                <Setter Property="Canvas.Top" Value="{Binding CanvasY}"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Ellipse Width="8" Height="8" Fill="Yellow" Stroke="Orange" StrokeThickness="1"
                                         MouseLeftButtonDown="Ellipse_MouseLeftButtonDown"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
            </ScrollViewer>
        </StackPanel>

        <!-- 右側：缺陷訊息 -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <StackPanel>
                <TextBlock Text="Defect List" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ItemsControl ItemsSource="{Binding FilteredDefectList}" Grid.Row="0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="4">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="X:" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding roll_x}" Margin="4,0"/>
                                        <TextBlock Text="Y:" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding roll_y}" Margin="4,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Border Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0">
                        <Image Source="{Binding SelectedImagePath}" Height="200" Stretch="Uniform"/>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
