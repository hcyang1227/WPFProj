<Window x:Class="App001_HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App001_HelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Label x:Name="lblHello" Content="Please press the button below..." HorizontalAlignment="Center" Height="100" Margin="0,140,0,0" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="btnHello" Content="Press Me !!" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" Height="25" Width="250" Click="Button_Click"/>

    </Grid>
</Window>
